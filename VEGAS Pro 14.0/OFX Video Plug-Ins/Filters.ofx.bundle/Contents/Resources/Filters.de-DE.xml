<!DOCTYPE OfxImageEffectResource SYSTEM "ofx.dtd">
 -->
<OfxImageEffectResource>
	<OfxPlugin name="com.sonycreativesoftware:Filters.Stereoscopic3DAdjust">

		<OfxResourceSet ofxHost="default">
			<OfxPropLabel>Stereoskopische 3D-Anpassung von VEGAS</OfxPropLabel>

            <OfxImageEffectPluginPropGrouping>VEGAS</OfxImageEffectPluginPropGrouping>
            <OfxPropPluginDescription>Bietet Anpassungen für stereoskopische 3D-Medien</OfxPropPluginDescription>
            <OfxImageEffectContext name="default">
            </OfxImageEffectContext>

			<OfxImageEffectContext name="OfxImageEffectContextFilter">

				<OfxParamTypeDouble name="Horizontal">
					<OfxPropLabel>Horizontaler Offset</OfxPropLabel>
				</OfxParamTypeDouble>
				
				<OfxParamTypeGroup name="AdjustmentsGroup">
                    <OfxPropLabel>Korrekturen</OfxPropLabel>
                </OfxParamTypeGroup>
				
				<OfxParamTypeDouble name="Vertical">
					<OfxPropLabel>Vertikaler Offset</OfxPropLabel>
				</OfxParamTypeDouble>
				<OfxParamTypeDouble name="Zoom">
					<OfxPropLabel>Zoom</OfxPropLabel>
				</OfxParamTypeDouble>
				<OfxParamTypeDouble name="Keystone">
					<OfxPropLabel>Keystone</OfxPropLabel>
				</OfxParamTypeDouble>
				<OfxParamTypeDouble name="Rotation">
					<OfxPropLabel>Drehung</OfxPropLabel>
				</OfxParamTypeDouble>
				<OfxParamTypeChoice name="FlipHorizontal">
					<OfxPropLabel>Horizontal kippen</OfxPropLabel>
					<OfxParamPropChoiceOption>Aus</OfxParamPropChoiceOption>
					<OfxParamPropChoiceOption>Links</OfxParamPropChoiceOption>
					<OfxParamPropChoiceOption>Rechts</OfxParamPropChoiceOption>
					<OfxParamPropChoiceOption>Beides</OfxParamPropChoiceOption>
				</OfxParamTypeChoice>
				<OfxParamTypeChoice name="FlipVertical">
					<OfxPropLabel>Vertikal kippen</OfxPropLabel>
					<OfxParamPropChoiceOption>Aus</OfxParamPropChoiceOption>
					<OfxParamPropChoiceOption>Links</OfxParamPropChoiceOption>
					<OfxParamPropChoiceOption>Rechts</OfxParamPropChoiceOption>
					<OfxParamPropChoiceOption>Beides</OfxParamPropChoiceOption>
				</OfxParamTypeChoice>
                <OfxParamTypePushButton name="AutoAlignButton">
                    <OfxPropLabel>Automatische Korrektur</OfxPropLabel>
                </OfxParamTypePushButton>

                <OfxParamTypeBoolean name="AutoCrop">
                    <OfxPropLabel>Automatisches Cropping</OfxPropLabel>
                </OfxParamTypeBoolean>

				<OfxParamTypeDouble name="Crop">
					<OfxPropLabel>Cropping</OfxPropLabel>
				</OfxParamTypeDouble>

				<OfxParamTypeGroup name="FloatingWindowsGroup">
					<OfxPropLabel>Schwebende Fenster</OfxPropLabel>
				</OfxParamTypeGroup>
				
				<OfxParamTypeDouble name="FloatingWindowLeft">
					<OfxPropLabel>Links</OfxPropLabel>
				</OfxParamTypeDouble>
				<OfxParamTypeDouble name="FloatingWindowRight">
					<OfxPropLabel>Rechts</OfxPropLabel>
				</OfxParamTypeDouble>

                <OfxMessage name="CouldNotAutoCorrect">Automatische Korrektur nicht möglich, da nicht genügend Gemeinsamkeiten zwischen den Bildern gefunden werden konnten.</OfxMessage>

                <OfxProgress name="AutoCorrectProgress">Automatische Korrektur...</OfxProgress>
                
			</OfxImageEffectContext>

		</OfxResourceSet>

	</OfxPlugin>
</OfxImageEffectResource>
